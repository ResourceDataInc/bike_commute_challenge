<% if teams.blank? %>
  <p><%= t("team.index.none") %></p>
<% else %>
  <table class="teams table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Rank</th>
        <th>Name</th>
        <th>%</th>
      </tr>
    </thead>
    <% teams.each_with_index do |team, index| %>
      <%= content_tag_for :tr, team do %>
        <td><%= index + 1 %></td>
        <td><%= link_to truncate(team.name, :separator=>'...', :length=>44), team %></td>       
        <td><%= team.participation_percent %></td>
      <% end %>
    <% end %>
  </table>
<% end %>