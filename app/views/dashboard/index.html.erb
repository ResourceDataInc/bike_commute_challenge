<h1>Hey There, <%= current_user.username %></h1>

<div class="dashboard">
  <div class="row stats">
    <div class="span2">
      <div class="stat-header">Your Mileage</div>
      <div class="number"><%= current_user.rides.sum(:distance) %></div>
    </div>
    <div class="span2">
      <div class="stat-header">Your Rides</div>
      <div class="number"><%= current_user.rides.count %></div>
    </div>
    <div class="span2">
      <div class="stat-header">Your Position</div>
      <div class="number positive">--</div>
    </div>
    <div class="span2">
      <div class="stat-header">Team Mileage</div>
      <div class="number positive">
        <% if current_user.teams.any? %>
          <%= current_user.teams.first.rides.sum(:distance) %>
        <% else %>
          --
        <% end %>
      </div>
    </div>
    <div class="span2">
      <div class="stat-header">Team Rides</div>
      <div class="number positive">
        <% if current_user.teams.any? %>
          <%= current_user.teams.first.rides.count %>
        <% else %>
          --
        <% end %>
      </div>
    </div>
    <div class="span2">
      <div class="stat-header">Team Position</div>
      <div class="number positive">--</div>
    </div>
  </div>

  <div class="row rides">
    <div class="span3 form">
      <h3>Log A Ride</h3>
      <%= render "rides/form" %>
    </div>

    <div class="span9 rides-list">
      <% if @rides.blank? %>
        <p><%= t("ride.index.none") %></p>
      <% else %>
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Ride Date</th>
              <th>Ride Distance</th>
              <th>Description</th>
            </tr>
          </thead>
          <% @rides.each do |ride| %>
            <%= content_tag_for :tr, ride do %>
              <td><%= link_to ride.date.strftime("%b #{ride.date.day.ordinalize}"), ride %></td>
              <td><%= ride.distance %></td>
              <td><%= ride.description.truncate(80) %></td>
            <% end %>
          <% end %>
        </table>
        <a class="pull-right btn" href="rides">More Rides...</a>
        <div class="clearfix"></div>
      <% end %>
    </div>
  </div>

</div>
