<%= simple_form_for @ride do |f| %>

  <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
  <%= f.input :description %>
  <%= f.input :distance %>
  <%= f.input :is_round_trip, :collection => [[t("ride.options.round"), "true"], [t("ride.options.one"), "false"]], :as => :radio_buttons %>

  <%= f.button :submit, t("ride.submit"), class: "btn btn-success" %>
  <%= link_to "Cancel", :back, class: "btn" %>
<% end %>