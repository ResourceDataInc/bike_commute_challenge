<% title @user.username %>

<h1><%= @user.username %></h1>

<% if @user.rides.any? %>
  <h3>Rides</h3>

  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th>Date</th>
        <th>Distance</th>
        <th>Description</th>
      </tr>
    </thead>

    <% @user.rides.each do |ride| %>
      <%= content_tag_for :tr, ride do %>
        <td><%= ride.date %></td>
        <td><%= ride.bike_distance %></td>
        <td><%= ride.description %></td>
      <% end %>
    <% end %>
  </table>
<% else %>
  <p><%= t "user.rides.empty" %></p>
<% end %>
