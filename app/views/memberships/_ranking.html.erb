<% if memberships.blank? %>
  <p><%= t("user.index.none") %></p>
<% else %>
  <table class="teams table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Rank</th>
        <th>Username</th>
        <th>Team</th>
        <th>%</th>
      </tr>
    </thead>
    <% memberships.each_with_index do |membership, index| %>
      <%= content_tag_for :tr, membership do %>
        <td><%= index + 1 %></td>
        <td><%= link_to truncate(membership.user.username, :separator=>'...', :length=>20), membership.user %></td>
        <td><%= link_to truncate(membership.team.name, :separator=>'...', :length=>20), membership.team %></td>
        <td><%= membership.participation_percent %></td>
      <% end %>
    <% end %>
  </table>
<% end %>